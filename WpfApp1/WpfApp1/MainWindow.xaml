<Window  x:Class="WpfApp1.MainWindow"
        Closed="Window_Closed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Osel.com" Height="450" Width="800">
    
    
    <Grid Background="{StaticResource MainBack}">
        <StackPanel>
            <TextBlock Name="name" Style="{StaticResource MainName}" Text="Osёl.com" HorizontalAlignment="Center">
                <TextBlock.Effect>
                <DropShadowEffect
                  ShadowDepth="4"
                  Direction="330"
                  Color="Black"
                  Opacity="0.5"
                 BlurRadius="4"/>
              </TextBlock.Effect>
            </TextBlock>
            
            
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="ModeSort" Text="Sorting" Width="100" SelectionChanged="ModeSort_SelectionChanged"></ComboBox>
               
            </StackPanel>
            
            
            <ListView  Style="{DynamicResource PanelStyle}" 
                  
                   Name="View" HorizontalContentAlignment="Center" >
                <ListView.Background>
                    <ImageBrush/>
                </ListView.Background>
       

            </ListView>
        </StackPanel>
    </Grid>

</Window>
