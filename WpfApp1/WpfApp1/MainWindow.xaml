<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Osel.com" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <TextBlock Name="MainName" Text="Osel.com" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="ModeSort" Text="Sorting"></ComboBox>
                <Button Content="OK"></Button>
            </StackPanel>
            <ListView Style="{DynamicResource PanelStyle}"  
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                   Name="View" HorizontalContentAlignment="Center" >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel HorizontalAlignment="Center"></StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

            </ListView>
        </StackPanel>
    </Grid>
</Window>
