<Window ResizeMode="NoResize" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Osel.com" Height="171.738" Width="571.739">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="1" Margin="5,9,0,9" Text="LOGIN: "  VerticalAlignment="Center" HorizontalAlignment="Right" Width="150" TextAlignment="Right"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" Margin="5,9,0,9" Text="PASSWORD: " VerticalAlignment="Center" HorizontalAlignment="Right" Width="150" TextAlignment="Right"></TextBlock>
        <TextBox Grid.Column="1" Margin="5" Grid.Row="1" Name="Login_box" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="200" MaxLength="30"></TextBox>
        <PasswordBox Grid.Column="1" Margin="5" Grid.Row="2" Name="Password_box"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="200" MaxLength="30" ></PasswordBox>
        <Button Content="login" Grid.Column="0" Grid.Row="3" Name="Login" Click="Login_Click"></Button>
        <Button Content="Registation" Grid.Column="1" Grid.Row="3" Name="Registration" Click="Registration_Click" ></Button>
    </Grid>

</Window>
